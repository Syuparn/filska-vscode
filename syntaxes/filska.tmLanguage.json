{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Filska",
	"patterns": [
		{
			"include": "#programs"
		}
	],
	"repository": {
		"programs": {
			"patterns": [
				{
					"include": "#subprograms"
				},
				{
					"include": "#comments"
				}
			]
		},
		"subprograms": {
			"name": "meta.subprogram.filska",
			"begin": "\\{\\s*([\\w_!?]+)",
			"beginCaptures": {
				"1": {
					"name": "variable.name.filska"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#statements"
				}
			]
		},
		"statements": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#literals"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.filska",
					"match": "\".*\\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.filska",
					"begin": "\\b(jmp|jpr)\\b",
					"end": "\\s",
					"patterns": [
						{
							"include": "#jmpoperands"
						},
						{
							"match": "[^\\s]*",
							"name": "invalid.illegal"
						}
					]
				},
				{
					"name": "keyword.control.filska",
					"match": "\\b(gto|swp|set|cmp)\\b"
				},
				{
					"name": "keyword.control.filska",
					"begin": "\\b(tmx|tmy|txm|tym|tzm|tmz|hlt)\\b",
					"end": "\\s",
					"patterns": [
						{
							"match": "[^\\s]*",
							"name": "invalid.illegal"
						}
					]
				},
				{
					"name": "keyword.control.filska",
					"begin": "\\b(tst)\\b",
					"end": "\\s",
					"patterns": [
						{
							"include": "#tstoperands"
						},
						{
							"match": "[^\\s]*",
							"name": "invalid.illegal"
						}
					]
				},
				{
					"name": "entity.name.function.fliska",
					"begin": "\\b(add|sub|mul|div|mod|pow)\\b",
					"end": "\\s",
					"patterns": [
						{
							"include": "#binaryoperands"
						},
						{
							"match": "[^\\s]*",
							"name": "invalid.illegal"
						}
					]
				},
				{
					"name": "entity.name.function.fliska",
					"begin": "\\b(inc|dec|sin|cos|tan|log|exp|flr|cel|rnd|neg|chr|prt|ipt|sqr|asn|acs|atn)\\b",
					"end": "\\s",
					"patterns": [
						{
							"match": "[^\\s]*",
							"name": "invalid.illegal"
						}
					]
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.numeric.fliska",
					"match": "-?[0-9]+(\\.[0-9]*)?(e[+-][0-9]+)?"
				}
			]
		},
		"tstoperands": {
			"match": "(,)([zelgn])?(,)?(-?[0-9]+)?",
			"captures": {
				"1": {
					"name": "keyword.operator.filska"
				},
				"2": {
					"name": "markup.heading.filska"
				},
				"3": {
					"name": "keyword.operator.filska"
				},
				"4": {
					"name": "constant.numeric.fliska"
				}
			}
		},
		"jmpoperands": {
			"match": "(,)([\\w_!?]+)?",
			"captures": {
				"1": {
					"name": "keyword.operator.filska"
				},
				"2": {
					"name": "variable.name.filska"
				}
			}
		},
		"binaryoperands": {
			"match": "(,)([xyzm])?(\\=)?([xyzm])?([xyzm])?",
			"captures": {
				"1": {
					"name": "keyword.operator.filska"
				},
				"2": {
					"name": "constant.language.filska"
				},
				"3": {
					"name": "keyword.operator.filska"
				},
				"4": {
					"name": "constant.language.filska"
				},
				"5": {
					"name": "constant.language"
				}
			}
		}
	},
	"scopeName": "source.filska"
}
