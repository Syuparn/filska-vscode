{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Filska",
	"patterns": [
		{
			"include": "#programs"
		}
	],
	"repository": {
		"programs": {
			"patterns": [
				{
					"include": "#subprograms"
				},
				{
					"include": "#comments"
				}
			]
		},
		"subprograms": {
			"name": "meta.subprogram.filska",
			"begin": "\\{\\s*(\\w+)",
			"beginCaptures": {
				"1": {
					"name": "variable.name"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#statements"
				}
			]
		},
		"statements": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#comments"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.filska",
					"match": "\".*\\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.filska",
					"match": "\\b(jmp|jpr|gto|hlt)\\b"
				},
				{
					"name": "keyword.other.filska",
					"match": "\\b(add|sub|mul|div)\\b"
				}
			]
		}
	},
	"scopeName": "source.filska"
}
