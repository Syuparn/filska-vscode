{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Filska",
	"patterns": [
		{
			"include": "#programs"
		}
	],
	"repository": {
		"programs": {
			"patterns": [
				{
					"include": "#subprograms"
				},
				{
					"include": "#comments"
				}
			]
		},
		"subprograms": {
			"name": "meta.subprogram.filska",
			"begin": "\\{\\s*(\\w+)",
			"beginCaptures": {
				"1": {
					"name": "variable.name.filska"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#statements"
				}
			]
		},
		"statements": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#literals"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.filska",
					"match": "\".*\\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.filska",
					"begin": "\\b(jmp|jpr)\\b",
					"end": "\\s*(,)\\s*(\\w+)",
					"endCaptures": {
						"1": {
							"name": "keyword.operator"
						},
						"2": {
							"name": "variable.name.filska"
						}
					}
				},
				{
					"name": "keyword.control.filska",
					"match": "\\b(gto|hlt|swp|set|cmp|tmx|tmy|txm|tym|tzm|tmz|tst)\\b"
				},
				{
					"name": "entity.name.function.fliska",
					"match": "\\b(add|sub|mul|div|mod|inc|dec|sin|cos|tan|log|exp|flr|cel|rnd|neg|chr|prt|ipt|pow|sqr|asn|acs|atn)\\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.numeric.fliska",
					"match": "-?[0-9]+(\\.[0-9]*)?"
				}
			]
		}
	},
	"scopeName": "source.filska"
}
